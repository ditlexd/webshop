{
  "extends": [
    "airbnb-typescript",
    "airbnb/hooks",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "prettier"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "react/react-in-jsx-scope": "off",
    "strict": [0, "global"],
    "class-methods-use-this": [0]
  },
  "overrides": [
    {
      "files": ["test-helpers.js"],
      "env": {
        "jest/globals": true
      },
    }
  ]
}
